{{!-- top bar start --}}
<div id="top-bar">
    <div class="inner">
        <div class="etd-fullname">
            {{#if etudiantInfos}}
                <h4>Bonjour&nbsp;&nbsp;<span>{{etudiantInfos.nom}}&nbsp;{{etudiantInfos.prenom}}</span>&nbsp;&nbsp;dans votre espace personnel</h4>
            {{/if}}
        </div>
        <div class="etd-email">
            {{#if user}}
                <h4>Utilisateur: <span>{{user.email}}</span></h4>
                <a href="/logout-etd">Se deconnecter</a>
            {{/if}}
        </div>
    </div>
</div>
{{!-- top bar end --}}

{{!-- mes demandes start --}}

<div id="demandes-title">
    <div class="inner">
        <div class="mesdmds">
            <a href="/mesdemandes/{{etudiantInfos.codeEtudiant}}">Mes demandes</a>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <a href="/mesdocuments/{{etudiantInfos.filiere}}/{{etudiantInfos.annee}}">Documents</a>
        </div>
    </div>
</div>
{{!-- mes demandes end --}}

{{!-- demande form start --}}
<div id="demande-main">
    <div class="container">
        <div class="inner">
            <div class="Title">
                <h2>Formulaire de demande</h2>
            </div>
            {{!-- notification start --}}
            {{>notifications}}
            {{!-- notification end --}}
            <div class="form-container">
                <form action="/envoie-demande" method="POST">
                    <div class="fullname">
                        <div>
                            <label>Nom: </label>
                            <input type="text" name="nom" value="{{etudiantInfos.nom}}" maxlength="20" required readonly>
                        </div>
                        <div>
                            <label>Prenom: </label>
                            <input type="text" name="prenom" value="{{etudiantInfos.prenom}}" maxlength="20" required readonly>
                        </div>
                    </div>
                    <div class="code-titre">
                        <div>
                            <label>Code etudiant: </label>
                            <input name="codeetudiant" value="{{etudiantInfos.codeEtudiant}}" type="text" maxlength="15" required readonly>
                        </div>
                        <div>
                            <label>Titre de demande</label>
                            <input name="objet" type="text" maxlength="60" required>
                        </div>
                    </div>
                    <div class="area">
                        <label>Contenu de demande: </label>
                        <textarea placeholder="Specifier votre demande ici..." name="contenu" cols="30" rows="7" maxlength="300" required></textarea>
                    </div>
                    <div class="valider">
                        <input type="submit" value="Envoyer" class="env-btn">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{!-- demande form end --}}

{{!-- footer start --}}
{{>footer}}
{{!-- footer end --}}